<!-- Modal -->
<div class="modal fade" id="jobTaskDetailsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Job Task Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_for(@job_task, url:"/task/#{@job_task.uuid}/update", method: :put, remote:true) do |f| %>
            <%= f.text_field :title %>
            <%= f.text_area :notes %>

            <%= f.hidden_field :job_uuid, :value => @job.uuid  %>
            <%= f.submit "Update" %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <% end %>
      </div>

    </div>
  </div>
</div>